<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center mb-4">
      <h2 class="display-4">User Info</h2>
      <hr class="w-25 mx-auto">
    </div>
    <div class="col-md-4 text-center">
      <div class="profile-image mb-3">
        <%= image_tag user.get_profile_image(150, 150), class: "rounded-circle shadow-sm" %>
      </div>
    </div>
    <div class="col-md-8">
      <table class="table table-hover">
        <tbody>
          <tr>
            <th class="text-right">Name</th>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <th class="text-right">Introduction</th>
            <td><%= user.introduction %></td>
          </tr>
          <tr>
            <th class="text-right">Follows</th>
            <td><%= link_to user.followings.count, user_followings_path(user), class: "btn btn-outline-primary btn-sm" %></td>
          </tr>
          <tr>
            <th class="text-right">Followers</th>
            <td><%= link_to user.followers.count, user_followers_path(user), class: "btn btn-outline-primary btn-sm" %></td>
          </tr>
        </tbody>
      </table>

      <% if user == current_user %>
        <div class="text-right">
          <%= link_to edit_user_path(user) do %>
            <button class="btn btn-outline-secondary">
              <i class="fa-solid fa-user-gear"></i> Edit Profile
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
