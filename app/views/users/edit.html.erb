<div class="container mt-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="text-center mb-4">User Info</h1>

      <%= form_with model: @user, local: true, html: { class: "form-horizontal" } do |f| %>

        <div class="form-group mb-4">
          <label for="user_name" class="form-label">Name</label>
          <%= f.text_field :name, autofocus: true, id: "user_name", placeholder: "Enter your name", class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <label for="user_image" class="form-label">Profile Image</label>
          <%= f.file_field :profile_image, id: "user_image", class: "form-control-file", accept: "image/*" %>
        </div>

        <div class="form-group mb-4">
          <label for="user_introduction" class="form-label">Introduction</label>
          <%= f.text_area :introduction, id: "user_introduction", placeholder: "Introduce yourself", class: "form-control", rows: 4 %>
        </div>

        <div class="text-center">
          <%= f.submit "Update User", class: "btn btn-primary btn-block" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
