<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-12 text-center mt-5">
      <h2>Follower Users</h2>
    </div>

    <% if @users.exists? %>
      <div class="row">
        <% @users.each do |user| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <div class="card-body text-center">
                <%= image_tag user.get_profile_image(100,100), class: 'img-fluid rounded-circle mb-3' %>
                <h5><%= user.name %></h5>
                <p>フォロー数: <%= user.followings.count %></p>
                <p>フォロワー数: <%= user.followers.count %></p>
                <%= link_to "Show", user_path(user.id), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center">ユーザーはいません</p>
    <% end %>
  </div>
</div>
