
<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <h2>Books with color: <%= @color %></h2>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-12">
      <%= render 'users/userinfo', user: @user %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-12">
      <h3>Books List</h3>
      <ul class="list-group">
        <% @books.each do |book| %>
          <li class="list-group-item">
            <strong>Title:</strong> <%= book.title %> <br>
            <strong>Author:</strong> <%= book.author %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
